{
  "name": "guitar-book",
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean": "lerna bootstrap && lerna run clean",
    "publish": "yarn lerna publish -y prerelease --force-publish",
    "lint:fix": "lerna run lint:fix",
    "prettier": "prettier --write --config .prettierrc .",
    "sort-package-json": "lerna exec npx sort-package-json",
    "removeNodeModules": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +"
  },
  "keywords": [
    "Gatsby",
    "Guitar",
    "Guitar Book",
    "Chords"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Jozwiaczek/guitar-book"
  },
  "author": {
    "name": "Jakub Jozwiak",
    "email": "kubencki@gmail.com"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "4.0.0",
    "lerna": "^3.22.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "2.1.1"
  },
  "engines": {
    "node": ">=12"
  }
}
